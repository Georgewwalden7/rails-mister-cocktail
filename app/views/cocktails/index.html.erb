<div class="main-banner">
  <h1>Cocktail Heaven</h1>
</div>

<div class="container">
  <div class="grid">
    <% @cocktails.each do |f| %>
      <%= link_to cocktail_path(f), :class => "no-text-decoration" do %>
        <div class = "card">
          <div class = "picture">
            <img src="https://picsum.photos/500/400?image=<%= f.id + 300%>" alt="" class = "pic">
          </div>
          <div class="card_content">
            <p class="title"><%= f.name  %></p>
          </div>
        </div>
      <% end %>
    <% end %>


  </div>
  <%= link_to 'New Cocktail', new_cocktail_path %>
</div>
